<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="TriloBot.Maui.MainPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Black">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="20">

            <!-- Camera Section -->
            <Border x:Name="CameraBorder"
                    Style="{StaticResource InfoCardBorderStyle3}">
                <WebView
                    x:Name="CameraWebView"
                    Source="http://pi5:8889/cam" />
            </Border>

            <!-- Info Cards Section -->
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!-- Connection Status Card -->
                <Border Grid.Column="0" Style="{StaticResource InfoCardBorderStyle}">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Connected"
                               Style="{StaticResource InfoCardTitleStyle}" />
                        <Label x:Name="ConnectionStatusLabel"
                               Text="No"
                               Style="{StaticResource InfoCardValueStyle}"
                               TextColor="Red" />
                    </VerticalStackLayout>
                </Border>

                <!-- Distance Card -->
                <Border Grid.Column="1" Style="{StaticResource InfoCardBorderStyle3}">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Distance"
                               Style="{StaticResource InfoCardTitleStyle}" />
                        <Label x:Name="DistanceCardLabel"
                               Text="-- cm"
                               Style="{StaticResource InfoCardValueStyle}" />
                    </VerticalStackLayout>
                </Border>

                <!-- Proximity Alert Card -->
                <Border Grid.Column="2" Style="{StaticResource InfoCardBorderStyle2}">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Collision"
                               Style="{StaticResource InfoCardTitleStyle}" />
                        <Label x:Name="CollisionAlertLabel"
                               Text="No"
                               Style="{StaticResource InfoCardValueStyle}"
                               TextColor="Green" />
                    </VerticalStackLayout>
                </Border>
            </Grid>
            
            <Rectangle HeightRequest="20" BackgroundColor="Transparent" />

            <Label Text="Controller" 
                   FontSize="24"
                   FontAttributes="Bold"
            />
            
            <!-- Control Buttons Section -->
            <Grid RowDefinitions="Auto,Auto,Auto"
                  ColumnDefinitions="Auto,Auto,Auto"
                  HorizontalOptions="Center"
                  RowSpacing="10"
                  ColumnSpacing="10">
                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    Text="Move Forward"
                    Clicked="OnMoveForwardClicked" />

                <Button
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Turn Left"
                    Clicked="OnTurnLeftClicked" />

                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="Stop"
                    Clicked="OnStopClicked" />

                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Text="Turn Right"
                    Clicked="OnTurnRightClicked" />

                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="Move Backward"
                    Clicked="OnMoveBackwardClicked" />
            </Grid>
            
            <Label Text="Lights" 
                   FontSize="24"
                   FontAttributes="Bold"
                   />
            
            <!-- Light section -->
            <Grid ColumnSpacing="12" RowSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                
                <!-- Connection Status Card -->
                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="All on"
                    Clicked="OnLightAllOn" />
                
                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    Text="All off"
                    Clicked="OnLightAllOn" />
                
                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Text="Police lights"
                    Clicked="OnLightAllOn" />
                
                <Button
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="MAUI mode"
                    BackgroundColor="#A259D9"
                    Clicked="OnLightAllPurple" />
                
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="Distance mode"
                    Clicked="OnLightAllOn" />
                
                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Text="Disco mode"
                    Clicked="OnLightAllOn" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>